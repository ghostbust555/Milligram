<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.LocationButton">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/location_button</item>
    </style>

    <style name="AppTheme.SearchButton">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/search_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="AppTheme.NavButton">
        <item name="android:textColor">@color/colorNav</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/nav_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="ResultsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="ResultsTheme.BackButton">
        <item name="android:textColor">@color/colorNav</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
